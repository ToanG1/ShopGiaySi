<div class="item">
  <div class="product">
    <div class="flip-container">
      <div class="flipper">
        <div class="back">
          <a href="/products/<%=product._id%>"
            ><img src="<%=product.image%> || https://storage.googleapis.com/proudcity/mebanenc/uploads/2021/03/placeholder-image.png" alt="<%=product.name%>" class="img-fluid"
          /></a>
        </div>
      </div>
    </div>
    <div class="text">
      <h3>
        <a href="/products/<%=product._id%>" style="text-decoration: none"
          ><%=product.name%></a
        >
      </h3>
      <p class="price"><del></del>$<%=product.price%></p>
    </div>
  </div>
</div>
