<div class="box">
  <h1>Đăng ký tài khoản</h1>
  <hr />
  <form action="/auth/signup" method="post">
    <!-- Errors display -->
    <% if(typeof(errors) != "undefined" ){ %> <% for(let error of errors){ %>
    <div class="alert alert-warning" role="alert"><%= error.msg%></div>
    <% }%> <% } %>
    <!-- Success message display -->
    <% if(typeof(success_msg) != "undefined" ){ %>
    <div class="alert alert-success" role="alert"><%= success_msg%></div>
    <% } %>
    <div class="form-group">
      <label for="name">Tên</label>
      <input
        required
        id="name"
        name="name"
        type="text"
        class="form-control"
        value="<%= typeof(user)!='undefined'?user.name:'' %>"
      />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input
        required
        id="email"
        name="email"
        type="text"
        class="form-control"
        value="<%= typeof(user)!='undefined'?user.email:'' %>"
      />
    </div>
    <div class="form-group">
      <label for="password">Số điện thoại</label>
      <input
        required
        id="phone"
        name="phone"
        type="tel"
        class="form-control"
        value="<%= typeof(user)!='undefined'?user.phone:'' %>"
      />
    </div>
    <div class="form-group">
      <label for="password">Mật khẩu</label>
      <input
        required
        id="password"
        name="password"
        type="password"
        class="form-control"
      />
    </div>
    <div class="form-group">
      <label for="password">Nhập lại mật khẩu</label>
      <input
        required
        id="password"
        name="confirmPassword"
        type="password"
        class="form-control"
      />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-user-md"></i> Đăng kí
      </button>
    </div>
  </form>
</div>
