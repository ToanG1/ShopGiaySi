<%- include('../includes/head.ejs') %>
<link href="/css/style.css" rel="stylesheet">
<link href="/css/custom.css" rel="stylesheet">
</head>

<body>
    <%- include('../includes/subHeader', {user})%>
        <section class="item content">
            <div class = "toparea">
                <div class="underlined-title">
                    <div class="editContent">
                        <h1 class="text-center latestitems">Hồ sơ</h1>
                    </div>
                    <div class="wow-hr type_short">
                        <span class="wow-hr-h">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </span>
                    </div>
                </div>
            </div>
        </section>
        <div class="wrapper-profile bg-white mt-sm-5">
            <h4 class="pb-4 border-bottom">Chi tiết hồ sơ</h4>
            <div class="d-flex align-items-start py-3 border-bottom"> <img
                    src="https://images.pexels.com/photos/1037995/pexels-photo-1037995.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500"
                    class="img" alt="">
            </div>
            <div class="py-2">
                <div class="row py-2">
    
                    <div class="col-md-6"> <label for="firstname">Tên</label> <input readonly type="text" class="bg-light form-control" name="name" value="<%= user.name %>"> </div>
                    <div class="col-md-6 pt-md-0 pt-3"> <label for="lastname">Địa chỉ</label> <input readonly type="text" class="bg-light form-control" name="address" value="<%= user.address %>"> </div>
                </div>
                <div class="row py-2">
                    <div class="col-md-6"> <label for="email">Email</label> <input readonly type="text" class="bg-light form-control" name="email" value="<%= user.email %>"> </div>
                    <div class="col-md-6 pt-md-0 pt-3"> <label for="phone">Số diện thoại</label> <input readonly type="tel" class="bg-light form-control" name="phone" value="<%= user.phone %>"> </div>
                </div>
            </div>
            <div class="center" style="margin-top: 10px; margin-bottom: 0px">
                <% if(!user.isLock){ %>
                    <button id="<%= user._id %>" class="btn btn-danger btn-sm ActionOnUserBtn">Khóa</button>
                <% }else{ %>
                    <button id="<%= user._id %>" class="btn btn-success btn-sm ActionOnUserBtn">Mở khóa</button>
                <% }%>
            </div>
        </div>
        <div class="center">
            <% if (user.isAdmin === true) { %>
                <a href="/admins">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-chevron-left"></i>&nbsp; Quay lại
                    </button>
                </a>
            <% } else { %>
            <a href="/users">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-chevron-left"></i>&nbsp; Quay lại
                </button>
            </a>
            <% } %>

        </div>
        <%- include('../includes/foot')%>
        <script src="/ajax/user-ajax.js"></script>
</body>

</html>