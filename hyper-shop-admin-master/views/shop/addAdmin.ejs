<%- include('../includes/head.ejs') %>
<link href="/css/style.css" rel="stylesheet">
<link href="/css/custom.css" rel="stylesheet">
</head>
<body>
    <%- include('../includes/subHeader', {user})%>
    <form action="/admins/add" method="post" 
        class="container wrapper-profile bg-white mt-sm-5 updateInfoForm box"
        style="display: flex; flex-direction: column; max-width: none;"
    >
        <div >
            <h2 class="pb-4 border-bottom">Cài đặt tài khoản</h2>
            <div class="py-2">
                    <div class="col-md-6"> 
                        <label for="email">Email</label> 
                        <input type="text" name="email" class="bg-light form-control" placeholder="Email"> 
                    </div>
                    <div class="col-md-6">
                        <label for="password">Mật khẩu</label>
                        <input type="password" name="password" class="bg-light form-control" placeholder="Mật khẩu" > 
                    </div>
                    <div class="col-md-6">
                        <label for="firstname">Tên</label>
                        <input type="text" name="name" class="bg-light form-control" placeholder="Tên" > 
                    </div>
                    <div class="col-md-6 pt-md-0 pt-3">
                        <label for="phone">SỐ điện thoại</label>
                        <input type="tel" name="phone" class="bg-light form-control" placeholder="Số điện thoại"> 
                    </div>
            </div>
        </div>
        <div id="save-profile">
            <button type="submit" style="border: none;" class="btn btn-primary">Thêm admin</button>
        </div>
    </form>
</body>
</html>